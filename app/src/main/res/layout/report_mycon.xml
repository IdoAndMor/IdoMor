<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report this MyCon:"
        android:id="@+id/reportTextView"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please tell us why"
        android:id="@+id/report2TextView"
        android:layout_below="@+id/reportTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/reportEditText"
        android:layout_below="@+id/report2TextView"
        android:layout_alignLeft="@+id/report2TextView"
        android:layout_alignStart="@+id/report2TextView"
        android:layout_alignRight="@+id/reportTextView"
        android:background="@drawable/send_text_edit"
        android:layout_alignEnd="@+id/reportTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report!"
        android:id="@+id/reportButton"
        android:layout_below="@+id/reportEditText"
        android:layout_alignLeft="@+id/reportEditText"
        android:layout_alignStart="@+id/reportEditText"
        android:layout_marginTop="57dp"
        android:layout_alignRight="@+id/reportEditText"
        android:layout_alignEnd="@+id/reportEditText" />

</RelativeLayout>