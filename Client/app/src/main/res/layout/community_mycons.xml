<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layoutDirection="ltr">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextEmailSingupButton"
        android:layout_column="23"
        android:background="#fc5f05"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:id="@+id/prevButton"
        android:background="#fc5f05"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/myconsIconsImage2"
        android:src="@mipmap/orange"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prevButton"
        android:layout_toEndOf="@+id/prevButton"
        android:layout_alignTop="@+id/prevButton" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_list"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/nextEmailSingupButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/search">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/myconSearchEditText"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="6"
        android:id="@+id/myconSearchEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:enabled="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/search"
        android:layout_toStartOf="@+id/search" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bingSerachProgressBar2"
        android:indeterminateDrawable="@drawable/circular"
        android:max="100"
        android:progress="20"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>